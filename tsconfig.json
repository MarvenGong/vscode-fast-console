{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "declaration": true,
    "lib": [
      "es6",
      "dom",
      "ESNext"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "src/test/files",
    "out/test/files"
  ],
  
  "linterOptions": {
    "exclude": ["src/test/files/js/**"]
  }
}